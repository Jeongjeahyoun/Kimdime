           <div class="container">
                  <table class="table table-bordered" >
                <thead>
                  <tr style="font size:35;">
                    <th><center><h3>카테고리</center></h3></th>
                    <th><center><h3>명칭</center></h3></th>
                    <th><center><h3>오전 출격/퇴각 명령</center></h3></th>
                    <th><center><h3>오후 출격/퇴각 명령</center></h3></th>
                  </tr>
                </thead>
                <tbody>
                    
                    <!--<h2>오전</h2>-->
                    <% Cloth.all.each do |c| %>
                      <tr>
                        <td><center><h3> <%= c.category %> </center></h3></td>
                        <td><center><h3> <%= c.name %> </h3></center></td>
                        <% if @morning.temperture > c.min and @morning.temperture < c.max %>
                         <td style="color: green;"><center><h3> 출격 </h3></center></td> 
                        <% else %>
                         <td style="color: red;"><center><h3> 퇴각 </h3></center></td>
                        <% end %>
                        <% if @afternoon.temperture > c.min and @afternoon.temperture < c.max %>
                         <td style="color: green;"><center><h3> 출격 </h3></center></td> 
                        <% else %>
                         <td style="color: red;"><center><h3> 퇴각 </h3></center></td>
                        <% end %>
                      </tr>
                    <% end %>
                    
                    <!--<h2>오후</h2>-->
                    
                    
                </tbody>
